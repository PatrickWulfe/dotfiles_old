#	thunar

#dmenu
super + d
	dmenu_run -i -nb '#1C1E26' -nf '#09F7A0' -sb '#09F7A0' -sf '#1C1E26' -fn 'NotoMonoRegular:bold:pixelsize=14'

#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd

